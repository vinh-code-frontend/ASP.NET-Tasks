<div class="boxes" style="justify-content: center">
    <div class="box">
        <div class="box-left box-item">
            <h4>@Model.CityName</h4>
            <p>@Model.DateAndTime.ToString("dd MMM yyyy")</p>
            <p>@Model.DateAndTime.ToString("hh:mm tt")</p>
        </div>
        <div class="box-right box-item">
            <h3>@Model.TemperatureFahrenheit</h3>
            <p>°F</p>
        </div>
    </div>
</div>