@using Task14WeatherApp.Models;
@model CityWeather

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/style.css" />
</head>

<body>
    <div class="container">
        <h1>Weather app</h1>
        <a href="/" style="padding-top: 24px;display: inline-block">Back to home page</a>

        <div class="boxes" style="justify-content: center">
            <div class="box">
                <div class="box-left box-item">
                    <h4>@Model.CityName</h4>
                    <p>@Model.DateAndTime.ToString("dd MMM yyyy")</p>
                    <p>@Model.DateAndTime.ToString("hh:mm tt")</p>
                </div>
                <div class="box-right box-item">
                    <h3>@Model.TemperatureFahrenheit</h3>
                    <p>°F</p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>